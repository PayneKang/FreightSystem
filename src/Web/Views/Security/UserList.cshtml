@model FreightSystem.Models.UserListModel
@using FreightSystem.Models
@{
    ViewBag.Title = "用户列表";
}
<br />
<fieldset class="large-12">
    <legend>@ViewBag.Title >> @Html.ActionLink("新建用户", "NewUser", "Security")</legend>
    <div class="row">
        <br />
        <div class="large-12 columns">
            <table class="table-cell-spacing large-12">
                <thead>
                    <tr>
                        <th>
                            状态
                        </th>
                        <th>
                            用户名
                        </th>
                        <th>
                            角色
                        </th>
                        <th>
                            备注
                        </th>
                        <th>
                            所在地
                        </th>
                        <th>
                            姓名
                        </th>
                        <th>
                            注册时间
                        </th>
                        <th>
                            最近登陆时间 | IP
                        </th>
                        <th>
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (UserModel record in Model.ItemList)
                    {
                        <tr>
                            <td>@(record.Disabled ? "禁用" : "可用")
                            </td>
                            <td>@record.UserID
                            </td>
                            <td>@record.Role.RoleName
                            </td>
                            <td>@record.Comment
                            </td>
                            <td>@record.Area.AreaName
                            </td>
                            <td>@record.Name
                            </td>
                            <td>@record.CreateDateTime
                            </td>
                            <td>@record.LastLoginTime | @record.LastLoginIP
                            </td>
                            <td>
                                <a href="/Security/UpdateUser?userid=@record.UserID">编辑</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
</fieldset>
