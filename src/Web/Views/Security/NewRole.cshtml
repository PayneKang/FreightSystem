@using FreightSystem.Models;
@model FreightSystem.Models.RoleModel
@{
    ViewBag.Title = "新建角色";
}
<section id="newTransportForm">
<br />
@using (Html.BeginForm())
{
    <fieldset class="large-4">
    <legend>@ViewBag.Title</legend>
    <div class="row">
        <br />
        <div class="large-10 columns large-offset-1">
            <label>角色名称</label>
            @Html.TextBoxFor(m => m.RoleName, new { @type = "text", @style = "width:80%", @placeholder = "必填" }) 
            @Html.ValidationMessageFor(m => m.RoleName)
        </div>
        <div class="large-10 columns large-offset-1">
            <label>菜单项</label>
            <ul class="side-nav">
                @foreach (MenuItemModel menu in ViewBag.AllMenu)
                {
                    <li><input type="checkbox" name="Menus" value="@menu.MenuCode" /> @menu.MenuText </li>
                }
                </ul>
        </div>
        <div class="large-11 columns large-offset-1">
            <label>权限</label>
            <ul class="side-nav">
                @foreach (FuncItemModel func in ViewBag.AllFunc)
                {
                    <li><input type="checkbox" name="Funcs" value="@func.FuncCode"/> @func.FuncText </li>
                }
            </ul>    
        </div>
        <div class="large-11 columns">
            <button type="submit" class="button tiny" style="margin-top:1rem">保存</button>
        </div>
    </div>
    @ViewBag.ErrorMessage
    </fieldset>
}
</section>
