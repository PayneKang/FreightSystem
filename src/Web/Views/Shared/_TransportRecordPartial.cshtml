@using FreightSystem.Models;
@model FreightSystem.Models.TransportRecordModel
<fieldset>
    <legend>详细信息</legend>
    <table class="large-12" style="border: 0px">
        <tr>
            <th class="large-3">
                发货日期
            </th>
            <td class="large-3">
                @Model.DeliverDate.ToString("yyyy-MM-dd")
            </td>
            <th class="large-3">
                客户
            </th>
            <td class="large-3">
                @Model.ClientName
            </td>
        </tr>
        <tr>
            <th>
                驾驶员
            </th>
            <td>
                @Model.Driver
            </td>
            <th>
                车牌号
            </th>
            <td>
                @Model.CarLicense
            </td>
        </tr>
        <tr>
            <th>
                托编号
            </th>
            <td>
                @Model.TrayNo
            </td>
            <th>
                物品名称
            </th>
            <td>
                @Model.PackageName
            </td>
        </tr>
        <tr>
            <th>
                起运地
            </th>
            <td>
                @Model.FromLocation
            </td>
            <th>
                卸货地 / 单位
            </th>
            <td>
                @Model.ToLocation
            </td>
        </tr>
        <tr>
            <th>
                专线/司机电话
            </th>
            <td>
                @Model.DeliverType
            </td>
            <th>
                所在业务区域
            </th>
            <td>
                @Model.BusinessArea
            </td>
        </tr>
        <tr>
            <th>
                预付
            </th>
            <td>
                @Model.PrePay
                @Html.HiddenFor(m => m.PrePay)
            </td>
            <th>
                油卡
            </th>
            <td>
                @Model.OilCard
            </td>
        </tr>
        <tr>
            <th>
                运费
            </th>
            <td>@Model.DeliverPrice
            </td>
            <th>
                短驳费
            </th>
            <td>@Model.ShortBargeFee
            </td>
        </tr>
        @*  <tr>
            <th>
                装卸费
            </th>
            <td>@Model.HandlingFee
            </td>
        </tr>*@
        <tr>
            <th>
                体积
            </th>
            <td>
                @Model.Volume
            </td>
            <th>
                数量
            </th>
            <td>
                @Model.Quantity
            </td>
        </tr>
        <tr>
            <th>
                到货时间
            </th>
            <td>
                @if (Model.ReceivedDate.HasValue)
                {
                    <div>@Model.ReceivedDate.Value.ToString("yyyy-MM-dd")</div>
                }
            </td>
        </tr>
        <tr>
            <th>
                扣款
            </th>
            <td>
                @Model.Deductions
            </td>
            <th>
                赔款
            </th>
            <td>
                @Model.Reparations
            </td>
        </tr>
        <tr>
            <th>
                应付金额
            </th>
            <td>
                @Model.AccountPayble
            </td>
            <th>
                付款时间
            </th>
            <td>
                @if (Model.PayDate.HasValue)
                {
                    <div>@Model.PayDate.Value.ToString("yyyy-MM-dd")</div>
                }
            </td>
        </tr>
        <tr>
            <th>
                备注
            </th>
            <td colspan="3">
                @Model.Comment
                @Html.HiddenFor(m => m.Comment)
            </td>
        </tr>
        <tr>
            <th>
                状态
            </th>
            <td colspan="3">
                @if (Model.Error)
                {                          
                    <div class="button tiny alert radius" style="cursor: inherit;">
                        异常</div>
                }
                else
                {                     
                    <div class="button tiny radius" style="cursor: inherit;">
                        正常</div>
                }
                @if (Model.Received)
                {                          
                    <div class="button tiny radius" style="cursor: inherit;">
                        到货</div>
                }
                else
                {      
                    <div class="button tiny alert radius" style="cursor: inherit;">
                        未到货</div>               
                }
                @if (Model.Paid)
                {                          
                    <div class="button tiny radius" style="cursor: inherit;">
                        已结算</div>
                }
                else
                {      
                    <div class="button tiny alert radius" style="cursor: inherit;">
                        未结算</div>               
                }
            </td>
        </tr>
    </table>
</fieldset>
