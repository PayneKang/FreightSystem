@using FreightSystem.Models;
@model FreightSystem.Models.TransportRecordModel
@{
    ViewBag.Title = "FillTransportRecord";
}

@using (Html.BeginForm())
{
    <fieldset>
    <table>
        <tr>
            <th style="width:110px;">日期</th>
            <td style="width:250px;"> @Model.DeliverDate.ToString("yyyy-MM-dd")
             @Html.HiddenFor(m => m.DeliverDate) </td>
            <th style="width:110px;">客户</th>
            <td style="width:250px;">
            @Model.ClientName
            @Html.HiddenFor(m => m.ClientName)
            </td>
        </tr>
        <tr>
            <th>驾驶员</th>
            <td>
            @Model.Driver
            @Html.HiddenFor(m => m.Driver)</td>
            <th>车牌号</th>
            <td>
            @Model.CarLicense
            @Html.HiddenFor(m => m.CarLicense)</td>
        </tr>
        <tr>
            <th>物品名称</th>
            <td colspan="3">
            @Model.PackageName
            @Html.HiddenFor(m => m.PackageName)</td>
        </tr>
        <tr>
            <th>起运地</th>
            <td>
            @Model.FromLocation
            @Html.HiddenFor(m => m.FromLocation)</td>
            <th>卸货地 / 单位</th>
            <td>
            @Model.ToLocation
            @Html.HiddenFor(m => m.ToLocation)</td>
        </tr>
        <tr>
            <th>运费</th>
            <td>
            @Model.DeliverPrice
            @Html.HiddenFor(m => m.DeliverPrice)</td>
            <th>预付</th>
            <td>
            @Model.PrePay
            @Html.HiddenFor(m => m.PrePay)</td>
        </tr>
        <tr>
            <th>油卡</th>
            <td>
            @Model.OilCard
            @Html.HiddenFor(m => m.OilCard)</td>
            <th>专线</th>
            <td>
            @Model.DeliverType
            @Html.HiddenFor(m => m.DeliverType)</td>    
        </tr>
        <tr>
            <th style="vertical-align:top;">备注</th>
            <td colspan="3">
            @Model.Comment
            @Html.HiddenFor(m => m.Comment)</td>
        </tr>
        <tr>
            <th style="vertical-align:top;">所在业务区域</th>
            <td colspan="3">
                @Html.LabelFor(x => x.BusinessArea, ((UserModel)ViewBag.LoggedUser).Area.AreaName)
                @Html.Hidden("businessarea", ((UserModel)ViewBag.LoggedUser).Area.AreaName)
            </td>
        </tr>
        @if (string.IsNullOrEmpty(Model.TrayNo))
        {
        <tr>
            <th>托编号
            </th>
            <td>
            @Html.TextBoxFor(x => x.TrayNo)
            @Html.ValidationMessageFor(x => x.TrayNo)
            </td>
            <th>体积
            </th>
            <td>
            @Html.TextBoxFor(x => x.Volume)
            @Html.ValidationMessageFor(x => x.Volume)
            </td>
        </tr>
        <tr>
            <th>数量
            </th>
            <td colspan="3">
            @Html.TextBoxFor(x => x.Quantity)
            @Html.ValidationMessageFor(x => x.Quantity)
            </td>
         </tr>
        }
        else
        {
        <tr>
            <th>托编号
            </th>
            <td>
            @Model.TrayNo
            </td>
            <th>体积
            </th>
            <td>
            @Model.Volume
            </td>
        </tr>
        <tr>
            <th>数量
            </th>
            <td colspan="3">
            @Model.Quantity
            </td>
         </tr>
        }
    </table>
    <div>
        @if (string.IsNullOrEmpty(Model.TrayNo))
        {
        <input type="submit" value="保存" />
        }
        else
        {
            <div>信息已经完成填充</div>
        }
    </div>
    </fieldset>
}