@using FreightSystem.Models;
@model List<BusinessAreaModel>
@{
    ViewBag.Title = "地区列表";
}
<br />
@using (Html.BeginForm())
{
    <fieldset class="large-6">
        <legend>@ViewBag.Title</legend>
        <div class="row">
            <br />
            <div class="large-10 columns large-offset-3">
                <div style="width: 100%; overflow: auto;">
                    <ul>
                        @foreach (BusinessAreaModel area in Model)
                        {
                            <li>@area.AreaName</li>
                        }
                    </ul>
                </div>
            </div>
            <div class="large-4 columns large-offset-3">
                <label>
                    地区名称</label>
                <input type="text" name="newarea" />
            </div>
            <div class="large-9 columns">
                <input type="submit" class="button tiny" value="创建" />
            </div>
        </div>
        <br />
        <label style="color: Red;">@ViewBag.ErrorMessage</label>
    </fieldset>
}
