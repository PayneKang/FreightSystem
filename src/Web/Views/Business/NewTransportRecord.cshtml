@model FreightSystem.Models.TransportRecordModel
@{
    ViewBag.Title = "NewTransportRecord";
}

<section id="newTransportForm">
<h2>@ViewBag.ErrorMessage</h2>
@using (Html.BeginForm()) {
    <fieldset>
    <table>
        <tr>
            <th>日期</th>
            <td>@Html.TextBoxFor(m=>m.DeliverDate)</td>
            <th>客户</th>
            <td>@Html.TextBoxFor(m=>m.ClientName)</td>
        </tr>
        <tr>
            <th>托编号</th>
            <td>@Html.TextBoxFor(m=>m.TrayNo)</td>
            <th>驾驶员</th>
            <td>@Html.TextBoxFor(m=>m.Driver)</td>
        </tr>
        <tr>
            <th>车牌号</th>
            <td>@Html.TextBoxFor(m=>m.CarLicense)</td>
            <th>物品名称</th>
            <td>@Html.TextBoxFor(m=>m.PackageName)</td>
        </tr>
        <tr>
            <th>体积（立方米）</th>
            <td>@Html.TextBoxFor(m=>m.Volume)</td>
            <th>件数（件）</th>
            <td>@Html.TextBoxFor(m=>m.Quantity)</td>
        </tr>
        <tr>
            <th>起运地</th>
            <td>@Html.TextBoxFor(m=>m.FromLocation)</td>
            <th>卸货地 / 单位</th>
            <td>@Html.TextBoxFor(m=>m.ToLocation)</td>
        </tr>
        <tr>
            <th>运费</th>
            <td>@Html.TextBoxFor(m=>m.DeliverPrice)</td>
            <th>短驳费</th>
            <td>@Html.TextBoxFor(m=>m.ShortBargeFee)</td>
        </tr>
        <tr>
            <th>装卸费</th>
            <td>@Html.TextBoxFor(m=>m.HandlingFee)</td>
            <th>赔款</th>
            <td>@Html.TextBoxFor(m => m.Reparations)</td>
        </tr>
        <tr>
            <th>扣款</th>
            <td>@Html.TextBoxFor(m => m.Deductions)</td>
            <th>预付</th>
            <td>@Html.TextBoxFor(m => m.PrePay)</td>
        </tr>
        <tr>
            <th>应付</th>
            <td>@Html.TextBoxFor(m => m.AccountPayble)</td>
            <th>付款日</th>
            <td>@Html.TextBoxFor(m => m.PayDate)</td>
        </tr>
        <tr>
            <th>专线</th>
            <td>@Html.TextBoxFor(m => m.DeliverType)</td>
            <th>备注</th>
            <td>@Html.TextBoxFor(m => m.Comment)</td>
        </tr>
    </table>
    <input type="submit" value="保存" />
    </fieldset>
}
</section>