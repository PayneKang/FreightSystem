@using FreightSystem.Models;
@model FreightSystem.Models.TransportRecordModel
@{
    ViewBag.Title = "新建发货动态记录";
}
<script language="javascript" type="text/javascript">
    $(document).ready(
        function () {
            var date = new Date();
            var dateString = date.getFullYear() + "-" + (date.getMonth() + 1) + "-" + date.getDate();
            $("#DeliverDate").val(dateString);
        }
    );
</script>
<h4>@ViewBag.Title</h4>
<section id="newTransportForm">
<h4>@ViewBag.ErrorMessage</h4>
<br />
@using (Html.BeginForm())
{
    <fieldset>
    <table>
        <tr>
            <th style="width:110px;">日期</th>
            <td style="width:250px;">@Html.TextBoxFor(m => m.DeliverDate, new { @type = "text" }) *
                @Html.ValidationMessageFor(m => m.DeliverDate)</td>
            <th style="width:110px;">客户</th>
            <td style="width:250px;">@Html.TextBoxFor(m => m.ClientName) *
                @Html.ValidationMessageFor(m => m.ClientName)</td>
        </tr>
        <tr>
            <th>托编号</th>
            <td>@Html.TextBoxFor(m => m.TrayNo) *
                @Html.ValidationMessageFor(m => m.TrayNo)</td>
            <th>驾驶员</th>
            <td>@Html.TextBoxFor(m => m.Driver) *
                @Html.ValidationMessageFor(m => m.Driver)</td>
        </tr>
        <tr>
            <th>车牌号</th>
            <td>@Html.TextBoxFor(m => m.CarLicense) *
                @Html.ValidationMessageFor(m => m.CarLicense)</td>
            <th>物品名称</th>
            <td>@Html.TextBoxFor(m => m.PackageName) *
                @Html.ValidationMessageFor(m => m.PackageName)</td>
        </tr>
        <tr>
            <th>起运地</th>
            <td>@Html.TextBoxFor(m => m.FromLocation) *
                @Html.ValidationMessageFor(m => m.FromLocation)</td>
            <th>卸货地 / 单位</th>
            <td>@Html.TextBoxFor(m => m.ToLocation) *
                @Html.ValidationMessageFor(m => m.ToLocation)</td>
        </tr>
        <tr>
            <th>运费</th>
            <td>@Html.TextBoxFor(m => m.DeliverPrice)
                @Html.ValidationMessageFor(m => m.DeliverPrice)</td>
            <th>预付</th>
            <td>@Html.TextBoxFor(m => m.PrePay)
                @Html.ValidationMessageFor(m => m.PrePay)</td>
        </tr>
        <tr>
            <th>油卡</th>
            <td>@Html.TextBoxFor(m => m.OilCard)
                @Html.ValidationMessageFor(m => m.OilCard)</td>
            <th>专线</th>
            <td>@Html.TextBoxFor(m => m.DeliverType)
                @Html.ValidationMessageFor(m => m.DeliverType)</td>    
        </tr>
        <tr>
            <th style="vertical-align:top;">备注</th>
            <td colspan="3">@Html.TextAreaFor(m => m.Comment, new { @Style = "width:480px; height:80px;" })
                @Html.ValidationMessageFor(m => m.Comment)</td>
        </tr>
        <tr>
            <th style="vertical-align:top;">所在业务区域</th>
            <td colspan="3">
                @Html.LabelFor(x => x.BusinessArea, ((UserModel)ViewBag.LoggedUser).Area.AreaName)
                @Html.Hidden("businessarea", ((UserModel)ViewBag.LoggedUser).Area.AreaName)
            </td>
        </tr>
        @*
        <tr>
            <th>体积（立方米）</th>
            <td>@Html.TextBoxFor(m => m.Volume) *
                @Html.ValidationMessageFor(m => m.Volume)</td>
            <th>件数（件）</th>
            <td>@Html.TextBoxFor(m => m.Quantity) *
                @Html.ValidationMessageFor(m => m.Quantity)</td>
        </tr>
        <tr>
            <th>装卸费</th>
            <td>@Html.TextBoxFor(m => m.HandlingFee)
                @Html.ValidationMessageFor(m => m.HandlingFee)</td>
            <th>赔款</th>
            <td>@Html.TextBoxFor(m => m.Reparations)
                @Html.ValidationMessageFor(m => m.Reparations)</td>
        </tr>
        <tr>
            <th>扣款</th>
            <td>@Html.TextBoxFor(m => m.Deductions)
                @Html.ValidationMessageFor(m => m.Deductions)</td>
            <th>短驳费</th>
            <td>@Html.TextBoxFor(m => m.ShortBargeFee)
                @Html.ValidationMessageFor(m => m.ShortBargeFee)</td>
        </tr>
        <tr>
            <th>付款日</th>
            <td>@Html.TextBoxFor(m => m.PayDate)
                @Html.ValidationMessageFor(m => m.PayDate)</td>
            <th>应付</th>
            <td>@Html.TextBoxFor(m => m.AccountPayble)
                @Html.ValidationMessageFor(m => m.AccountPayble)</td>     
        </tr>
        *@
    </table>
    <input type="submit" value="保存" />
    </fieldset>
}
</section>
