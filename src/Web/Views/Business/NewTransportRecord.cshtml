@using FreightSystem.Models;
@model FreightSystem.Models.TransportRecordModel
@{
    ViewBag.Title = "新建发货动态记录";
}
<script language="javascript" type="text/javascript">
    $(document).ready(
        function () {
            var date = new Date();
            var dateString = date.getFullYear() + "-" + (date.getMonth() + 1) + "-" + date.getDate();
            $("#DeliverDate").val(dateString);
        }
    );
</script>
<section id="newTransportForm">
<br />
@using (Html.BeginForm())
{
<fieldset class="large-6">
    <legend>@ViewBag.Title</legend>
    <div class="row">
        <br />
        <div class="large-6 columns">
            <label>日期</label>
            @Html.TextBoxFor(m => m.DeliverDate, new { @type = "text", @style = "width:80%", @placeholder = "必填" }) 
            @Html.ValidationMessageFor(m => m.DeliverDate)
        </div>
        <div class="large-6 columns">
            <label>客户</label>
            @Html.TextBoxFor(m => m.ClientName, new { @type = "text", @style = "width:80%", @placeholder = "必填" })
            @Html.ValidationMessageFor(m => m.ClientName)
        </div>
        <div class="large-6 columns">
            <label>托编号</label>
            @Html.TextBoxFor(m => m.TrayNo, new { @type = "text", @style = "width:80%", @placeholder = "必填" }) 
            @Html.ValidationMessageFor(m => m.TrayNo)
        </div>
        <div class="large-6 columns">
            <label>驾驶员</label>
            @Html.TextBoxFor(m => m.Driver, new { @type = "text", @style = "width:80%", @placeholder = "必填" }) 
            @Html.ValidationMessageFor(m => m.Driver)
        </div>
        <div class="large-6 columns">
            <label>车牌号</label>
            @Html.TextBoxFor(m => m.CarLicense, new { @type = "text", @style = "width:80%", @placeholder = "必填" }) 
            @Html.ValidationMessageFor(m => m.CarLicense)
        </div>
        <div class="large-6 columns">
            <label>物品名称</label>
            @Html.TextBoxFor(m => m.PackageName, new { @type = "text", @style = "width:80%", @placeholder = "必填" }) 
            @Html.ValidationMessageFor(m => m.PackageName)
        </div>
        <div class="large-6 columns">
            <label>起运地</label>
            @Html.TextBoxFor(m => m.FromLocation, new { @type = "text", @style = "width:80%", @placeholder = "必填" }) 
            @Html.ValidationMessageFor(m => m.FromLocation)
        </div>
        <div class="large-6 columns">
            <label>卸货地 / 单位</label>
            @Html.TextBoxFor(m => m.ToLocation, new { @type = "text", @style = "width:80%", @placeholder = "必填" }) 
            @Html.ValidationMessageFor(m => m.ToLocation)
        </div>
        <div class="large-6 columns">
            <label>运费</label>
            @Html.TextBoxFor(m => m.DeliverPrice, new { @type = "text", @style = "width:80%" })
            @Html.ValidationMessageFor(m => m.DeliverPrice)
        </div>
        <div class="large-6 columns">
            <label>预付</label>
            @Html.TextBoxFor(m => m.PrePay, new { @type = "text", @style = "width:80%" })
            @Html.ValidationMessageFor(m => m.PrePay)
        </div>
        <div class="large-6 columns">
            <label>油卡</label>
            @Html.TextBoxFor(m => m.OilCard, new { @type = "text", @style = "width:80%" })
            @Html.ValidationMessageFor(m => m.OilCard)
        </div>
        <div class="large-6 columns">
            <label>专线</label>
            @Html.TextBoxFor(m => m.DeliverType, new { @type = "text", @style = "width:80%" })
            @Html.ValidationMessageFor(m => m.DeliverType)
        </div>
        <div class="large-12 columns">
            <label>备注</label>
            @Html.TextAreaFor(m => m.Comment, new { @style = "width:90%; height:80px;" })
            @Html.ValidationMessageFor(m => m.Comment)
        </div>
        <div class="large-3 columns">
            <label style="padding-top:1rem">所在业务区域： </label>
        </div>
        <div class="large-2 columns">
            @Html.LabelFor(m => m.BusinessArea, ((UserModel)ViewBag.LoggedUser).Area.AreaName, new { @class = "left", @style = "padding-top:1rem" }) 
            @Html.Hidden("businessarea", ((UserModel)ViewBag.LoggedUser).Area.AreaName)
        </div>
        <div class="large-3 columns">
            <button type="submit" class="button tiny" style="margin-top:1rem" >保存</button>
        </div>
    </div>

    @*
    <table style="width:50%;">
        <tr>
            <th>体积（立方米）</th>
            <td>@Html.TextBoxFor(m => m.Volume) *
                @Html.ValidationMessageFor(m => m.Volume)</td>
            <th>件数（件）</th>
            <td>@Html.TextBoxFor(m => m.Quantity) *
                @Html.ValidationMessageFor(m => m.Quantity)</td>
        </tr>
        <tr>
            <th>装卸费</th>
            <td>@Html.TextBoxFor(m => m.HandlingFee)
                @Html.ValidationMessageFor(m => m.HandlingFee)</td>
            <th>赔款</th>
            <td>@Html.TextBoxFor(m => m.Reparations)
                @Html.ValidationMessageFor(m => m.Reparations)</td>
        </tr>
        <tr>
            <th>扣款</th>
            <td>@Html.TextBoxFor(m => m.Deductions)
                @Html.ValidationMessageFor(m => m.Deductions)</td>
            <th>短驳费</th>
            <td>@Html.TextBoxFor(m => m.ShortBargeFee)
                @Html.ValidationMessageFor(m => m.ShortBargeFee)</td>
        </tr>
        <tr>
            <th>付款日</th>
            <td>@Html.TextBoxFor(m => m.PayDate)
                @Html.ValidationMessageFor(m => m.PayDate)</td>
            <th>应付</th>
            <td>@Html.TextBoxFor(m => m.AccountPayble)
                @Html.ValidationMessageFor(m => m.AccountPayble)</td>     
        </tr>
    </table>
    *@
    @ViewBag.ErrorMessage
</fieldset>
}
</section>
